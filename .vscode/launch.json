{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Client",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["start", "client"],
      "cwd": "${workspaceFolder}/client",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Server",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}/review-server",
      "console": "integratedTerminal",
      "env": {
        "PORT": "3001"
      }
    }
  ]
}
